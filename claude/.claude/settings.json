{
  "cleanupPeriodDays": 4098,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "DISABLE_TELEMETRY": "1",
    "PROJECTS": "~/dev/",
    "USE_BUILTIN_RIPGREP": "1"
  },
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "permissions": {
    "allow": [
      "Bash(mise:*)",
      "Bash(tree:*)",
      "Bash(bd:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Read(~/.zshrc)",
      "Read(**)",
      "Edit(**)",
      "MultiEdit(**)",
      "Edit(~/.cache/**)",
      "MultiEdit(~/.cache/**)",
      "Edit(~/.local/**)",
      "MultiEdit(~/.local/**)",
      "Edit(/tmp/**)",
      "MultiEdit(/tmp/**)",
      "Write(**)",
      "Glob(**)",
      "Grep(**)"
    ],
    "deny": [
      "Bash(shutdown)",
      "Bash(reboot)",
      "Bash(halt)",
      "Bash(init)",
      "Bash(poweroff)",
      "Bash(mkfs)",
      "Bash(dd)",
      "Bash(fdisk)",
      "Bash(parted)",
      "Bash(chown)",
      "Bash(chmod 7:*)",
      "Bash(sudo)",
      "Bash(doas)",
      "Bash(su)",
      "Bash(curl http)",
      "Bash(wget http)",
      "Bash(ssh)",
      "Bash(scp)",
      "Bash(rsync)"
    ],
    "ask": [
      "Bash(rm)",
      "Bash(chmod)",
      "Bash(chown)",
      "Bash(kill)",
      "Bash(truncate)",
      "Bash(find -delete)",
      "Bash(git reset --hard)",
      "WebFetch(domain:*)"
    ]
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "context7@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": ["/var/run/docker.sock"],
      "allowLocalBinding": true
    },
    "excludedCommands": ["git", "docker"]
  },
  "companyAnnouncements": ["Welcome to Claude Code! (global)"],
  "additionalDirectories": ["~/dev/*", "~/.local/*", "~/.cache/*", "/tmp/*"],
  "defaultMode": "plan"
}
